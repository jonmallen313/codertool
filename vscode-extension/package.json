{
    "name": "codertool-vscode",
    "displayName": "CoderTool",
    "description": "Claude-powered multi-agent development system",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.83.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:codertool.createTask",
        "onCommand:codertool.viewStatus"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "codertool.createTask",
                "title": "CoderTool: Create Task"
            },
            {
                "command": "codertool.viewStatus",
                "title": "CoderTool: View Status"
            }
        ],
        "statusBarItem": {
            "id": "codertool.status",
            "alignment": "right"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch --mode development",
        "package": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^16.18.34",
        "@types/vscode": "^1.83.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.44.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.6",
        "webpack": "^5.88.1",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "axios": "^1.6.0"
    }
}